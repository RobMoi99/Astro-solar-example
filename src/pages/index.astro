        <h2
          class="utxs:mx-auto 2xl:text-5xl sm:text-2xl  utxs:text-center utmd:text-large utxs:font-semibold lg:text-3xl ut2xl:max-w-[48rem] w-[75%] sm:w-[50%] sm:min-w-[28rem]"
